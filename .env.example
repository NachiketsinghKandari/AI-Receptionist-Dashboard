# Supabase - Production
SUPABASE_PROD_URL=https://xxx.supabase.co
SUPABASE_PROD_KEY=your_supabase_prod_service_key

# Supabase - Staging
SUPABASE_STAGE_URL=https://xxx.supabase.co
SUPABASE_STAGE_KEY=your_supabase_stage_service_key

# Supabase - Client-side (staging auth)
NEXT_PUBLIC_SUPABASE_STAGE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_STAGE_ANON_KEY=your_supabase_stage_anon_key

# JWT Secret
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Auth - Comma-separated list of allowed login emails
ALLOWED_EMAILS=user@example.com

# Sentry
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# LLM Providers (for report generation)
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key

# Cekura - Call observability integration
CEKURA_API_KEY=your_cekura_api_key

# Google Sheets - Visit logging
# Run `node scripts/google-sheets-auth.mjs` to obtain the refresh token
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_SHEET_ID=your_spreadsheet_id

# Turso (libSQL) - Reports database
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token
